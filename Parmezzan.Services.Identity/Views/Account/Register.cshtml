@using Parmezzan.Services.Identity.MainModule.Account
@model RegisterViewModel

<div class="login-page">
    

    <partial name="_ValidationSummary" />
    <br/>
    <div class="row">

        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    <h2>Rejestracja</h2>
                </div>

                <div class="card-body">
                    <form asp-route="Login">
                        <input type="hidden" asp-for="ReturnUrl" />

                        <div class="form-group">
                            <label asp-for="Username">Nazwa użytkownika</label>
                            <input class="form-control" placeholder="Nazwa użytkownika" asp-for="Username" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input class="form-control" placeholder="Email" asp-for="Email" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="FirstName">Imię</label>
                            <input class="form-control" placeholder="Imię" asp-for="FirstName" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="LastName">Nazwisko</label>
                            <input class="form-control" placeholder="Nazwisko" asp-for="LastName" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password">Hasło</label>
                            <input type="password" class="form-control" placeholder="Hasło" asp-for="Password" autocomplete="off">
                        </div>
                        <div class="form-group">
                            <label asp-for="RoleName">Uprawnienia</label>
                            <select asp-for="RoleName" class="form-control" asp-items="@(new SelectList(ViewBag.message))"></select>
                        </div>
                        <br/>
                        <br/>
                        <button class="btn btn-primary" name="button" value="Register">Zarejestruj</button>
                        <button class="btn btn-secondary" name="button" value="cancel">Anuluj</button>
                    </form>
                </div>
                <div class="card-footer">
                    <a href="@Url.Action("Login",new {Model.ReturnUrl })">Powrót do logowania</a>
                </div>
            </div>
        </div>


    </div>
</div>